<h2>Stigli zahtevi za prijateljstvo</h2>
<table>
    <tr><th>Od</th><th>Akcije</th></tr>
    <c:forEach var="req" items="${requests}">
        <tr>
            <td>${req.fromUser.ime}</td>
            <td>
                <form method="post" action="${pageContext.request.contextPath}/friends/respond">
                    <input type="hidden" name="requestId" value="${req.id}" />
                    <button class="btn btn-accept" type="submit" name="accepted" value="true">Prihvati</button>
                    <button class="btn btn-decline" type="submit" name="accepted" value="false">Odbij</button>
                </form>
            </td>
        </tr>
    </c:forEach>
    <c:if test="${empty requests}">
        <tr><td colspan="2">Nema novih zahteva</td></tr>
    </c:if>
</table>

<h2>Moji prijatelji</h2>
<table>
    <tr><th>Ime</th><th>Poruke</th></tr>
    <c:forEach var="f" items="${friends}">
        <tr>
            <td>${f.ime}</td>
            <td>
                <a class="btn btn-message" href="${pageContext.request.contextPath}/chat?friendId=${f.id}">Poruke</a>
            </td>
        </tr>
    </c:forEach>
    <c:if test="${empty friends}">
        <tr><td colspan="2">Još nemaš prijatelja</td></tr>
    </c:if>
</table>


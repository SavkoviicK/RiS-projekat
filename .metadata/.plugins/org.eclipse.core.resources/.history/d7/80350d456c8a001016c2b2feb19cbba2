<!-- auth helpers -->
<script src="/js/auth.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
  const BASE = '<%=ctx%>';
	// 1) Header (koristi zajedničku funkciju iz auth.js)
  if (typeof paintUserInfoHeader === 'function') paintUserInfoHeader();  // :contentReference[oaicite:0]{index=0}
  if (typeof showAdminMenu === 'function') showAdminMenu();              // :contentReference[oaicite:1]{index=1}

  // 2) Provera uloge i otključavanje stranice
  const roles = (JSON.parse(localStorage.getItem('roles')||'[]')||[]);
  const isAdmin = roles.some(r => String(r.authority||'') === 'ROLE_ADMIN');
  const adminPanel = document.getElementById('adminPanel');
  const msg = document.getElementById('msg');
  const iframe = document.getElementById('pdf');

  if (isAdmin) {
    adminPanel.style.display = 'block';
    msg.textContent = 'Kliknite na neko dugme da prikažete PDF izveštaj.';
  } else {
    adminPanel.style.display = 'none';
    msg.textContent = 'Ova stranica je dostupna samo administratorima.';
  }

  // 3) Helper za preuzimanje PDF-a sa tokenom
  async function fetchPdf(url){
    const res = await fetch(url, { headers: authHeader() });
    if(!res.ok){
      let txt = '';
      try { txt = await res.text(); } catch(_) {}
      throw new Error('Greška ' + res.status + (txt?': '+txt:''));
    }
    return await res.blob();
  }

  // 4) Dugmad (samo ako je admin)
  const btnPoDanu = document.getElementById('btnPoDanu');
  const btnPoVet  = document.getElementById('btnPoVet');

  if (isAdmin && btnPoDanu) btnPoDanu.onclick = async ()=>{
    msg.textContent = 'Učitavam PDF...';
    try{
      const blob = await fetchPdf('/api/izvestaji/pregledi-po-danu.pdf');
      iframe.src = URL.createObjectURL(blob);
      iframe.style.display='block';
      msg.textContent = 'Izveštaj učitan.';
    }catch(e){
      msg.textContent = e.message;
      iframe.style.display='none';
    }
  };

  if (isAdmin && btnPoVet) btnPoVet.onclick = async ()=>{
    msg.textContent = 'Učitavam PDF...';
    try{
      const blob = await fetchPdf('/api/izvestaji/pregledi-po-veterinaru.pdf');
      iframe.src = URL.createObjectURL(blob);
      iframe.style.display='block';
      msg.textContent = 'Izveštaj učitan.';
    }catch(e){
      msg.textContent = e.message;
      iframe.style.display='none';
    }
  };
});
</script>
</body>

package com.veterinarska.stanica.controller;

import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;
import java.util.List;

import com.veterinarska.stanica.model.Poruka;
import com.veterinarska.stanica.repository.PorukaRepository;

@RestController
@RequestMapping("/api/poruke")
public class PorukaController {

    private final PorukaRepository repo;

    public PorukaController(PorukaRepository repo) {
        this.repo = repo;
    }

    // Slanje poruke
    @PostMapping
    public org.springframework.http.ResponseEntity<?> posalji(@RequestBody Poruka p) {
        // (provere i uƒçitavanje posiljalac/primalac iz baze kao i do sada)
        var sacuvana = repo.save(p);
        return org.springframework.http.ResponseEntity.ok(AppMapper.toDTO(sacuvana));
    }

    // Sve poruke
    @GetMapping
    public List<Poruka> sve() {
        return repo.findAll();
    }
}

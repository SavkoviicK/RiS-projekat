<!-- CHANGED: ctx i za auth.js -->
<script src="<%=ctx%>/js/auth.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
  // CHANGED: baza za sve rute sa context path-om
  const BASE = '<%=ctx%>';

  // 1) Header (koristi zajedniƒçku funkciju iz auth.js)
  if (typeof paintUserInfoHeader === 'function') paintUserInfoHeader();
  if (typeof showAdminMenu === 'function') showAdminMenu();

  // 2) Provera uloge i otkljuƒçavanje stranice (otpornije na format roles u storage-u)
  const raw = JSON.parse(localStorage.getItem('roles') || '[]');
  const roles = Array.isArray(raw) ? raw : (raw.roles || raw.authorities || []);
  const isAdmin = roles.some(r => {
    const v = typeof r === 'string' ? r : (r.authority || r.role || '');
    const up = String(v || '').toUpperCase();
    return up.includes('ROLE_ADMIN') || up === 'ADMIN';
  });

  const adminPanel = document.getElementById('adminPanel');
  const msg = document.getElementById('msg');
  const iframe = document.getElementById('pdf');

  if (isAdmin) {
    adminPanel.style.display = 'block';
    msg.textContent = 'Kliknite na neko dugme da prika≈æete PDF izve≈°taj.';
  } else {
    adminPanel.style.display = 'none';
    msg.textContent = 'Ova stranica je dostupna samo administratorima.';
  }

  // 3) Helper za preuzimanje PDF-a sa tokenom (CHANGED: Accept + no-store)
  async function fetchPdf(url){
    const res = await fetch(url, {
      headers: { ...authHeader(), 'Accept': 'application/pdf' },
      cache: 'no-store'
    });
    if(!res.ok){
      let txt = '';
      try { txt = await res.text(); } catch(_) {}
      throw new Error('Gre≈°ka ' + res.status + (txt?': '+txt:''));
    }
    return await res.blob();
  }

  // CHANGED: revoke starih blob URL-ova
  let currentUrl = null;
  function showPdf(blob){
    if (currentUrl) URL.revokeObjectURL(currentUrl);
    currentUrl = URL.createObjectURL(blob);
    iframe.src = currentUrl;
    iframe.style.display = 'block';
  }

  // 4) Dugmad (samo ako je admin) ‚Äî CHANGED: BASE u URL-ovima
  const btnPoDanu = document.getElementById('btnPoDanu');
  const btnPoVet  = document.getElementById('btnPoVet');

  if (isAdmin && btnPoDanu) btnPoDanu.onclick = async ()=>{
    msg.textContent = 'Uƒçitavam PDF...';
    try{
      const blob = await fetchPdf(`${BASE}/api/izvestaji/pregledi-po-danu.pdf`);
      showPdf(blob);
      msg.textContent = 'Izve≈°taj uƒçitan.';
    }catch(e){
      msg.textContent = e.message;
      iframe.style.display='none';
    }
  };

  if (isAdmin && btnPoVet) btnPoVet.onclick = async ()=>{
    msg.textContent = 'Uƒçitavam PDF...';
    try{
      const blob = await fetchPdf(`${BASE}/api/izvestaji/pregledi-po-veterinaru.pdf`);
      showPdf(blob);
      msg.textContent = 'Izve≈°taj uƒçitan.';
    }catch(e){
      msg.textContent = e.message;
      iframe.style.display='none';
    }
  };
});
</script>
</body>

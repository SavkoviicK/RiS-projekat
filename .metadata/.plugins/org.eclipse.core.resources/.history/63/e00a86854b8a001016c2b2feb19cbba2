<script src="/js/auth.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
  // header info
  (function paintHeader(){
    const info=document.getElementById('userInfo'), btn=document.getElementById('btnLogout');
    const t=localStorage.getItem('jwt');
    if(t){ info.textContent='Prijavljen'; btn.style.display='inline-block'; btn.onclick=()=>{ logout(); location.href='/'; }; }
    else { info.innerHTML='<a href="/prijava">Prijavi se</a>'; btn.style.display='none'; }
  })();

  // prikaži admin link u meniju (ako postoji funkcija)
  try { if (typeof showAdminMenu==='function') showAdminMenu(); } catch(e){}

  // proveri da li je admin i sakrij/otkrij panel
  (function gateAdmin(){
    try{
      const roles = JSON.parse(localStorage.getItem('roles')||'[]');
      const names = roles.map(r=>r.authority || r);
      const isAdmin = names.includes('ROLE_ADMIN');
      document.getElementById('adminPanel').style.display = isAdmin ? 'block' : 'none';
      document.getElementById('msg').textContent = isAdmin
        ? 'Kliknite na neko dugme da prikažete PDF izveštaj.'
        : 'Ova stranica je dostupna samo administratorima.';
    }catch(e){}
  })();

  // helper za fetch PDF sa tokenom
  async function fetchPdf(url){
    const res = await fetch(url, { headers: authHeader() });
    if(!res.ok){
      const txt = await res.text();
      throw new Error('Greška ' + res.status + (txt?': '+txt:''));
    }
    return await res.blob();
  }

  // dugmad
  const btnPoDanu = document.getElementById('btnPoDanu');
  const btnPoVet  = document.getElementById('btnPoVet');
  const iframe = document.getElementById('pdf');
  const msg = document.getElementById('msg');

  if (btnPoDanu) btnPoDanu.onclick = async ()=>{
    msg.textContent = 'Učitavam PDF...';
    try{
      const blob = await fetchPdf('/api/izvestaji/pregledi-po-danu.pdf');
      iframe.src = URL.createObjectURL(blob);
      iframe.style.display='block';
      msg.textContent = 'Izveštaj učitan.';
    }catch(e){
      msg.textContent = e.message;
      iframe.style.display='none';
    }
  };

  if (btnPoVet) btnPoVet.onclick = async ()=>{
    msg.textContent = 'Učitavam PDF...';
    try{
      const blob = await fetchPdf('/api/izvestaji/pregledi-po-veterinaru.pdf');
      iframe.src = URL.createObjectURL(blob);
      iframe.style.display='block';
      msg.textContent = 'Izveštaj učitan.';
    }catch(e){
      msg.textContent = e.message;
      iframe.style.display='none';
    }
  };
});
</script>

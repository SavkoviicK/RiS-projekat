package com.veterinarska.stanica.dto;

import com.veterinarska.stanica.model.ZahtevZaPrijateljstvo;
import java.time.Instant;

public class ZahtevZaPrijateljstvoDTO {
    private Long id;
    private Long posiljalacId;
    private String posiljalacEmail;
    private Long primalacId;
    private String primalacEmail;
    private ZahtevZaPrijateljstvo.Status status;
    private Instant kreiran;

    public ZahtevZaPrijateljstvoDTO() {}

    public ZahtevZaPrijateljstvoDTO(Long id, Long posiljalacId, String posiljalacEmail,
                                    Long primalacId, String primalacEmail,
                                    ZahtevZaPrijateljstvo.Status status, Instant kreiran) {
        this.id = id;
        this.posiljalacId = posiljalacId;
        this.posiljalacEmail = posiljalacEmail;
        this.primalacId = primalacId;
        this.primalacEmail = primalacEmail;
        this.status = status;
        this.kreiran = kreiran;
    }

    // get/set metode
    public Long getId() { return id; }
    public void setId(Long id) { this.id = id; }

    public Long getPosiljalacId() { return posiljalacId; }
    public void setPosiljalacId(Long posiljalacId) { this.posiljalacId = posiljalacId; }

    public String getPosiljalacEmail() { return posiljalacEmail; }
    public void setPosiljalacEmail(String posiljalacEmail) { this.posiljalacEmail = posiljalacEmail; }

    public Long getPrimalacId() { return primalacId; }
    public void setPrimalacId(Long primalacId) { this.primalacId = primalacId; }

    public String getPrimalacEmail() { return primalacEmail; }
    public void setPrimalacEmail(String primalacEmail) { this.primalacEmail = primalacEmail; }

    public ZahtevZaPrijateljstvo.Status getStatus() { return status; }
    public void setStatus(ZahtevZaPrijateljstvo.Status status) { this.status = status; }

    public Instant getKreiran() { return kreiran; }
    public void setKreiran(Instant kreiran) { this.kreiran = kreiran; }
}

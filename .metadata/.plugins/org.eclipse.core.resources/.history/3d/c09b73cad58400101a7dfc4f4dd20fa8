package com.veterinarska.stanica.service;

import java.io.InputStream;
import java.sql.Connection;
import javax.sql.DataSource;

import org.springframework.stereotype.Service;

import net.sf.jasperreports.engine.*;

@Service
public class IzvestajService {

    private final DataSource dataSource;

    public IzvestajService(DataSource dataSource) {
        this.dataSource = dataSource;
    }

    public byte[] pdfPreglediPoDanu() throws Exception {
        return generisiPdf("/reports/pregledi_po_danu.jrxml");
    }

    public byte[] pdfPreglediPoVeterinaru() throws Exception {
        return generisiPdf("/reports/pregledi_po_veterinaru.jrxml");
    }

    private byte[] generisiPdf(String jrxmlPath) throws Exception {
        try (Connection conn = dataSource.getConnection();
             InputStream is = getClass().getResourceAsStream(jrxmlPath)) {

            JasperReport report = JasperCompileManager.compileReport(is);
            JasperPrint print = JasperFillManager.fillReport(report, null, conn);
            return JasperExportManager.exportReportToPdf(print);
        }
    }
}

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="PreglediPoVeterinaru"
              pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <queryString>
        <![CDATA[
            SELECT v.ime AS ime,
                   v.prezime AS prezime,
                   COALESCE(COUNT(p.id), 0) AS broj
            FROM korisnici v
            LEFT JOIN pregledi p ON p.veterinar_id = v.id
            WHERE v.uloga = 'VETERINAR'
            GROUP BY v.id, v.ime, v.prezime
            ORDER BY broj DESC
        ]]>
    </queryString>

    <field name="ime" class="java.lang.String"/>
    <field name="prezime" class="java.lang.String"/>
    <field name="broj" class="java.lang.Long"/>

    <title>
        <band height="50">
            <staticText>
                <reportElement x="0" y="10" width="500" height="30"/>
                <textElement>
                    <font pdfEncoding="Cp1250"/>
                </textElement>
                <text><![CDATA[Izveštaj: Pregledi po veterinaru (svi uključeni)]]></text>
            </staticText>
        </band>
    </title>

    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="200" height="20"/>
                <textElement>
                    <font pdfEncoding="Cp1250"/>
                </textElement>
                <text><![CDATA[Veterinar]]></text>
            </staticText>
            <staticText>
                <reportElement x="200" y="0" width="200" height="20"/>
                <textElement>
                    <font pdfEncoding="Cp1250"/>
                </textElement>
                <text><![CDATA[Broj pregleda]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="200" height="20"/>
                <textElement>
                    <font pdfEncoding="Cp1250"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{ime} + " " + $F{prezime}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="200" y="0" width="200" height="20"/>
                <textElement>
                    <font pdfEncoding="Cp1250"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{broj}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
</jasperReport>
